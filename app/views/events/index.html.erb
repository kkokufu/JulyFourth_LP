<p id="notice"><%= notice %></p>

<h1>イベントスケジュール</h1>

<table>
  <thead>
    <tr>
      <th>イベント名</th>
      <th>カテゴリー</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_name %></td>
        <td><%= event.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'イベント登録', '/events/new' %>

<%= month_calendar events: @events do |date, events| %>
  <%= date.day %>

  <% events.each do |event| %>
    <div>
      <%= link_to event.event_name, "events/index" %>
    </div>
  <% end %>
<% end %>