<h1 class="center">イベントスケジュール</h1>

<br>

<%= month_calendar events: @events do |date, events| %>
  <%= date.day %>

  <% events.each do |event| %>
    <div>
      <%= link_to event.event_name, "events/index" %>
    </div>
  <% end %>
<% end %>

<br>

<table>
  <thead>
    <tr>
      <th>イベント名</th>
      <th>カテゴリー</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coming_events.each do |event| %>
      <tr> 　
        <td><%= event.event_name %></td>
        <td><%= event.category %></td>
        <td><%= event.start_time.strftime("%Y-%m-%d %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>